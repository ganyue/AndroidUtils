<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- attrs for RatioImageView -->
    <declare-styleable name="RatioImageView">
        <attr name="ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="SegSeeker">
        <attr name="segs" format="string"/>
    </declare-styleable>

    <declare-styleable name="TimerSeekBar">
        <attr name="split" format="integer" />
        <attr name="line_width" format="dimension" />
        <attr name="line_height" format="dimension" />
        <attr name="line_color" format="color" />
        <attr name="normal_point_r" format="dimension"/>
        <attr name="normal_point_color" format="color" />
        <attr name="move_point_r" format="dimension"/>
        <attr name="move_point_color" format="color" />
        <attr name="point_num" format="integer"/>
        <attr name="text_marginTop" format="dimension"/>
        <attr name="text_splitDes" format="string"/>
        <attr name="text_size_normal" format="dimension"/>
        <attr name="text_size_selected" format="dimension"/>
        <attr name="text_color_normal" format="color" />
        <attr name="text_color_selected" format="color" />
    </declare-styleable>

    <declare-styleable name="PinyinTextView">
        <!--拼音字体大小-->
        <attr name="textSizePinyin" format="dimension"/>
        <!--汉字字体大小-->
        <attr name="textSizeChinese" format="dimension"/>
        <!--拼音字体颜色-->
        <attr name="textColorPinyin" format="color"/>
        <!--汉字字体颜色-->
        <attr name="textColorChinese" format="color"/>
    </declare-styleable>

    <declare-styleable name="VoiceWave">
        <attr name="voicewave_line_color" format="color"/>
        <attr name="voicewave_line_width" format="dimension"/>
        <attr name="voicewave_line_cap" format="dimension"/>
        <attr name="voicewave_line_update_interval" format="integer"/>
    </declare-styleable>
</resources>